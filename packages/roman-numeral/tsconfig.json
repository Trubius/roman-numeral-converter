{
  "compilerOptions": {
    "baseUrl": ".",
    "esModuleInterop": true,
    "lib": [
      "es2015",
      "es2016",
      "es2017"
    ],
    "module": "commonjs",
    "moduleResolution": "node",
    "noImplicitAny": true,
    "sourceMap": true,
    "strict": true,
    "target": "es2017",
    "outDir": "dist",


    "types": [
      "node",
      "jest"
    ],
    "noUnusedLocals": true
  },
  "include": [
    "./lib"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}
